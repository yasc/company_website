{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Services offered by Applied Economics"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "overview": {
      "type": "richtext"
    },
    "capabilities": {
      "type": "component",
      "repeatable": true,
      "component": "content.capability"
    },
    "processSteps": {
      "type": "component",
      "repeatable": true,
      "component": "content.process-step"
    },
    "clientTypes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::client-type.client-type"
    },
    "caseStudies": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::case-study.case-study",
      "mappedBy": "services"
    },
    "relatedResearch": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::paper.paper"
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
